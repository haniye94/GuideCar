<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:id="@+id/plaks"
    android:layoutDirection="ltr"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:scaleType="centerInside"
        android:src="@drawable/plak_azad_old" />
    <View
        android:id="@+id/divid5"
        android:layout_width="15dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/txt_plak_customer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divid5"
        android:layout_marginTop="12dp"
        android:text="کیش"
        android:textColor="@color/white"
        android:textSize="15dp"
        />


    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <View
            android:id="@+id/divid0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.5" />

        <TextView
            android:id="@+id/txt_plak_customer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="123456"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <View
            android:id="@+id/divid2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"/>


        <View
            android:id="@+id/divid7"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal">

        <View
            android:id="@+id/divid3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="2.5" />

        <TextView
            android:id="@+id/txt_plak_customer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textColor="@color/gray"
            android:textSize="15dp" />

        <View
            android:id="@+id/divid4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"/>


    </LinearLayout>

    <TextView
        android:id="@+id/txt_plak_customer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/divid5"
        android:layout_marginTop="12dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />


</RelativeLayout>