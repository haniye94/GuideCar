<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_name"
            android:layout_width="@dimen/logo_width"
            android:layout_height="@dimen/logo_height"
            android:layout_margin="@dimen/logo_margin"
            android:src="@drawable/servicea"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_notif"
            android:layout_width="@dimen/ic_back_notif_width"
            android:layout_height="@dimen/ic_back_notif_height"
            android:layout_margin="@dimen/ic_back_notif_margin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/notifications"

            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_reserve_list"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="@dimen/ic_back_notif_margin"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_reserve_list"
            app:layout_constraintRight_toLeftOf="@id/ic_notif"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_blue" />

                <TextView
                    android:id="@+id/txt_title_advertisetop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-0.1dp"
                    android:text="جستجوی پلاک خودرو"
                    android:textColor="@color/text_dark"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchpelak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shap_simple_rec"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/ly_plak"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shap_edittext"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <EditText
                            android:id="@+id/edt8"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom"
                            android:imeOptions="actionSearch"
                            android:inputType="number"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/edt7"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center|bottom"
                            android:inputType="number"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />

                        <TextView
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/border_edt" />


                        <EditText
                            android:id="@+id/edt6"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:gravity="center|bottom"
                            android:inputType="number"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/edt5"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:gravity="center|bottom"
                            android:inputType="number"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/edt4"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center|bottom"
                            android:inputType="number"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/edt3"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginRight="7dp"
                            android:gravity="center|bottom"
                            android:inputType="text"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/edt2"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:gravity="center|bottom"
                            android:inputType="number"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />

                        <EditText
                            android:id="@+id/edt1"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:focusedByDefault="true"
                            android:gravity="center|bottom"
                            android:inputType="number"
                            android:layoutDirection="ltr"
                            android:maxLength="1"
                            android:textColor="@color/text_low_dark"
                            android:textDirection="ltr"
                            android:textSize="25dp" />
                    </LinearLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/edt_phone"
                        style="@style/edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:focusableInTouchMode="true"
                        android:hint="موبایل"
                        android:inputType="number"
                        android:visibility="gone"
                        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
                        app:boxStrokeErrorColor="#CCFD2D2D"
                        app:boxStrokeWidthFocused="1dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:focusableInTouchMode="true"
                            android:inputType="number"
                            android:textColor="@color/text_low_dark"
                            android:textColorHint="@color/text_low_dark"
                            android:textSize="13dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_search_plak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="33dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_blue"
                        android:drawableRight="@drawable/ic_searchv"

                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:letterSpacing="-0.1"
                        android:paddingLeft="31dp"

                        android:paddingTop="5dp"

                        android:paddingRight="15dp"

                        android:paddingBottom="5dp"
                        android:text="جستجو"
                        android:textColor="@color/white"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/border_edt"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp" />

                    <TextView
                        android:id="@+id/txt_search_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="33dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/back_gray"
                        android:gravity="center"
                        android:letterSpacing="-0.1"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingRight="15dp"

                        android:paddingBottom="5dp"
                        android:text="پلاک خوان"

                        android:textColor="@color/white"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lrn_reserve_car_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layoutDirection="ltr"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/lrn_first"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintRight_toRightOf="parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:layout_marginEnd="10dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="12dp">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/const_serviceA"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/orange_backgroun"
                                    android:padding="10dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/ll_service_badi">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ic_list"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:src="@drawable/list"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/color_circle_end_margin"
                                        android:text="@string/servisea"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/big_font"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toLeftOf="@+id/ic_list"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="2dp"
                                android:layout_weight="14"
                                android:layout_gravity="center"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/empty_next_service"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/gray_backgroun"
                                    android:gravity="center"
                                    android:padding="14dp"
                                    android:text="شما درحال حاضر سرویس نزدیکی ندارید"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/big_font"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/ll_service_badi"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/gray_backgroun"
                                    android:orientation="horizontal"
                                    android:paddingTop="12dp"
                                    android:paddingBottom="12dp"
                                    android:paddingRight="20dp"
                                    android:paddingLeft="20dp"
                                    android:visibility="visible">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txt_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="1401/08/15"
                                        android:gravity="left"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/big_font"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/txt_product_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="@string/engin_oil"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/big_font"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toRightOf="@id/txt_date"
                                        app:layout_constraintTop_toTopOf="parent" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/lrn_second"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/lrn_first">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:layout_marginEnd="4dp"
                                android:layout_weight="1.5"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="12dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="@id/ll_service_badi">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/const_car"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/dark_green_backgroun"
                                    android:padding="10dp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ic_people"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginLeft="8dp"
                                        android:src="@drawable/customer"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="8dp"
                                        android:text="@string/car"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/big_font"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toLeftOf="@+id/ic_people"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="6dp"
                                android:layout_weight="2"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="12dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="@id/ll_service_badi">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/const_fault"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/purple_backgroun"
                                    android:padding="10dp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ic_money"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginLeft="8dp"
                                        android:src="@drawable/ic_reserve"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="16dp"
                                        android:text="خلافی"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/big_font"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toLeftOf="@+id/ic_money"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="12dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="@id/ll_service_badi">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/const_reserve"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:background="@drawable/dark_blue_backgroun"
                                    android:padding="10dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="@id/ll_service_badi">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:id="@+id/ic_reserve_money"
                                        android:layout_width="28dp"
                                        android:layout_height="28dp"
                                        android:layout_marginLeft="8dp"
                                        android:src="@drawable/ic_reserve"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tv_reserve"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="8dp"
                                        android:text="رزرو خدمات"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/big_font"
                                        app:layout_constraintBottom_toBottomOf="@id/ic_reserve_money"
                                        app:layout_constraintRight_toLeftOf="@+id/ic_reserve_money"
                                        app:layout_constraintTop_toTopOf="@id/ic_reserve_money" />
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </LinearLayout>

<!--                    <com.facebook.shimmer.ShimmerFrameLayout-->
<!--                        android:id="@+id/grid_main_shimmer_layout"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="match_parent"-->
<!--                        android:layout_marginTop="8dp"-->
<!--                        tools:ignore="MissingConstraints">-->

<!--                        <include layout="@layout/layout_grid_main_shimmer" />-->
<!--                    </com.facebook.shimmer.ShimmerFrameLayout>-->

                    <LinearLayout
                        android:id="@+id/marakez_khadamat_khodro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingRight="10dp">

                            <ImageView

                                android:layout_width="@dimen/color_circle_width_height"
                                android:layout_height="@dimen/color_circle_width_height"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_orange_circle" />

                            <TextView
                                android:id="@+id/txt_title_category"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/color_circle_end_margin"
                                android:text="مراکز خدمات خودرو "
                                android:textColor="@color/text_gray_color"
                                android:textSize="@dimen/very_big_font"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycle_done_service_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/job_categories_shimmer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        tools:ignore="MissingConstraints">

                        <include layout="@layout/layout_job_categories_shimmer" />
                    </com.facebook.shimmer.ShimmerFrameLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingRight="10dp">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/ic_bg_produce" />

                            <TextView
