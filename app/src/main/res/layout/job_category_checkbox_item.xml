<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_job_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="6dp">

   <!-- <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
         />-->

    <RelativeLayout
        android:id="@+id/ly_root"
        android:layout_width="65dp"
        android:layout_height="65dp"
        >

        <ImageView
            android:id="@+id/ly_back"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:background="@drawable/item_job_category_false"
            android:elevation="4dp" />

        <ImageView
            android:id="@+id/im_job_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:elevation="4dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/tavizroghani" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="26dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="0dp"
            style="@style/MyCheckBox"
            android:elevation="5dp"
            android:visibility="gone"
            app:buttonTint="@color/blue_light"
             />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_job_title"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_root"
        android:layout_alignRight="@id/ly_root"
        android:layout_alignLeft="@id/ly_root"
        android:gravity="center"
        android:text="job title"/>
</RelativeLayout>

