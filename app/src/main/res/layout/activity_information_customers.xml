<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl"
  >

    <include layout="@layout/layout_action_bar_pages" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/aboutus"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/editCust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="-0.2dp"
        android:text="ویرایش اطلاعات خودرو"
        android:padding="8dp"
        android:textColor="@color/button"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="1dp"
            android:background="@drawable/shap_simple_rec"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="15dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.7"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_name_customer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:lineSpacingExtra="-0.2dp"
                    android:text="محمود جعفری همدانی"
                    android:textColor="@color/gray"
                    android:textSize="13dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="-0.2dp"
                        android:text="تاریخ تولد:"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_date_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="1370/01/16"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="جنسیت:"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="5dp"
                        android:text="آقا"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="همراه:"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_phone_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="09184455585"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="-0.2dp"
                        android:text="تاریخ ثبت:"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_date_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="5dp"
                        android:text="1400/03/24"
                        android:textColor="@color/gray"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="-0.2dp"
                        android:text="نوع مشتری: "
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_type_customer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="5dp"
                        android:text="وفادار"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:elevation="1dp"
            android:layout_margin="8dp"
            android:background="@drawable/shap_simple_rec"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نام خودرو: "
                        android:textColor="@color/gray"
                        android:textSize="13dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_name_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="206"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نوع خودرو: "
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_type_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="سواری"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="تیپ خودرو: "
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_tip_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="206"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="سال تولید: "
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_model_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="1382"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="کد خودرو: "
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_chasi_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="206"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/ly_plk_general"
                        layout="@layout/item_plak_general" />

                    <include
                        android:id="@+id/ly_plk_taxi"
                        layout="@layout/item_plak_taxi"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_edari"
                        layout="@layout/item_plak_edari"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_entezami"
                        layout="@layout/item_plak_entezami"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_malolin"
                        layout="@layout/item_plak_malolin"
                        android:visibility="gone" />


                    <include
                        android:id="@+id/ly_plk_azad_new"
                        layout="@layout/item_plak_azad_new"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/ly_plk_azad_old"
                        layout="@layout/item_plak_azad_old"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="2"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="نام سوخت خودرو: "
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/txt_fuel_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="206"
                        android:textColor="@color/gray"
                        android:textSize="13dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/txt_benzini"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shap_un_select"
                    android:gravity="center"
                    android:text="بنزینی"
                    android:textColor="@color/text_low_dark"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txt_dezeli"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/shap_select"
                    android:gravity="center"
                    android:text="دیزلی"
                    android:textColor="@color/text_light"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/txt_doghane"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shap_un_select"
                    android:gravity="center"
                    android:text="دوگانه"
                    android:textColor="@color/text_low_dark"
                    android:textSize="13dp" />
                <TextView
                    android:id="@+id/txt_hibrid"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/shap_un_select"
                    android:gravity="center"
                    android:text="هیبرید"
                    android:textColor="@color/text_low_dark"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>