<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="134dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/item_reserve_time"
    android:elevation="1dp"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:gravity="center"
    android:textDirection="rtl">

    <TextView
        android:id="@+id/txt_reserve_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textColor="@color/text_dark_gray"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/txt_reserve_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="شهریور 1402"
        android:textColor="@color/text_dark_gray"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/txt_reserve_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="9:30 الی 10:00"
        android:textColor="@color/text_dark_gray"
        android:textSize="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:text="@string/reserve_service"
        android:elevation="1dp"
        android:textColor="@color/gray_text_color"
        android:background="@drawable/shap_reserve"
        android:textSize="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        />

</LinearLayout>