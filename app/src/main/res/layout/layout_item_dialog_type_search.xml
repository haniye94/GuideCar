<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:textDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="نوع جستجو را مشخص کنید"
            android:textColor="@color/text_low_dark"
            android:textSize="14dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:background="@drawable/ic_bg"
            android:padding="3dp"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_search_plak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/shap_edittext"
        android:gravity="center"
        android:text="جسجو با پلاک"
        android:textColor="@color/text_low_dark"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/txt_search_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shap_edittext"
        android:gravity="center"
        android:text="جسجو با نام"
        android:textColor="@color/text_low_dark"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/txt_search_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shap_edittext"
        android:gravity="center"
        android:text="جسجو با موبایل"
        android:textColor="@color/text_low_dark"
        android:textSize="13dp" />

</LinearLayout>